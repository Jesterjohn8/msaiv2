<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the view is pressed -->
    <item android:color="@color/green_dark" android:state_pressed="true"/>

    <!-- State when the view is focused -->
    <item android:color="@color/green_medium" android:state_focused="true"/>

    <!-- Default state -->
    <item android:color="@color/green_default"/>
</selector>