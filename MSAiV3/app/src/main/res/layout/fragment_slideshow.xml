<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/bg"
        tools:context=".ui.slideshow.SlideshowFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Title -->
            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About MSAi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/text_slideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- App Icon -->
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/msai"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/about_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSAi is an educational artificial intelligence app where in the subjects Mathematics and Science from grade 7 to grade 10 will be explained thoroughly using this app. This app will allow students from grade 7 to grade 10 to easily comprehend the lesson in each quarter."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <!-- Features Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Comprehensive explanations in Math and Science\n- Grade 7 to Grade 10 curriculum\n- Interactive learning modules"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />

            <!-- Contact Info -->
            <TextView
                android:id="@+id/contact_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For more information, contact us at support@msai.com"
                android:textSize="14sp"
                android:textColor="@color/gray" />

        </LinearLayout>
    </ScrollView>
